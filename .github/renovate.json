{
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependency"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "OPERATOR_SDK_VERSION \\?= (?<currentValue>v[^\\s]+)"
      ],
      "depNameTemplate": "operator-framework/operator-sdk",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "KUSTOMIZE_VERSION \\?= (?<currentValue>v[^\\s]+)"
      ],
      "depNameTemplate": "kubernetes-sigs/kustomize",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "CONTROLLER_TOOLS_VERSION \\?= (?<currentValue>v[^\\s]+)"
      ],
      "depNameTemplate": "kubernetes-sigs/controller-tools",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "ENVTEST_K8S_VERSION = (?<currentValue>[^\\s]+)"
      ],
      "depNameTemplate": "kubernetes",
      "datasourceTemplate": "kubernetes",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "KIND_VERSION \\?= (?<currentValue>[^\\s]+)"
      ],
      "depNameTemplate": "kubernetes-sigs/kind",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "GOLANGCI_LINT_VERSION \\?= (?<currentValue>v[^\\s]+)"
      ],
      "depNameTemplate": "golangci/golangci-lint",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "GEN_API_REF_DOCS_VERSION \\?= (?<currentValue>[0-9a-f]{7,40})"
      ],
      "depNameTemplate": "ahmetb/gen-crd-api-reference-docs",
      "datasourceTemplate": "github-commits",
      "versioningTemplate": "git"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "operator-registry/releases/download/v(?<currentValue>[^/]+)/"
      ],
      "depNameTemplate": "operator-framework/operator-registry",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "k8s.io/client-go"
      ],
      "allowedVersions": "< 1.0.0"
    }
  ]
}
